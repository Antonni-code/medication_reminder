// Prisma Schema for Medication Reminder App
// PostgreSQL database with NextAuth.js authentication

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==================== NextAuth.js Tables ====================
// These tables are required by NextAuth.js for OAuth authentication
// Learn more: https://next-auth.js.org/adapters/prisma

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts      Account[]
  sessions      Session[]
  alarms        Alarm[]
  adherenceLog  AdherenceLog[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ==================== Application Tables ====================

// User's alarm settings (3 alarms per user: Morning, Afternoon, Evening)
model Alarm {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Alarm details
  index     Int      // 0 = Morning, 1 = Afternoon, 2 = Evening
  hour      Int      // 0-23 (24-hour format)
  minute    Int      // 0-59
  enabled   Boolean  @default(true)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Each user can only have one alarm per index (0, 1, 2)
  @@unique([userId, index])
  @@map("alarms")
}

// Track medication adherence history
model AdherenceLog {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  alarmIndex Int     @map("alarm_index") // Which alarm (0, 1, 2)
  scheduledTime DateTime @map("scheduled_time") // When it should have been taken
  takenAt    DateTime? @map("taken_at") // When it was actually taken (null = missed)
  status     String   // "taken_on_time", "taken_late", "missed"
  delayMinutes Int?   @map("delay_minutes") // How many minutes late (if applicable)

  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId, scheduledTime])
  @@map("adherence_logs")
}
